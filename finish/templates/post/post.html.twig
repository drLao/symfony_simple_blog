{% extends 'base.html.twig' %}

{% block title %}POST: {{ postTitle }} {% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="my-4">POST</h2>
                <div style="box-shadow: 2px 3px 9px 4px rgba(0,0,0,0.04);">
                    <div class="q-container-show p-4">
                        <div class="row">
                            <div class="col-2 text-center">
                                <img src="{{ asset('images/tisha.png') }}" width="100" height="100" alt="cat">
                                <div class="mt-3">
                                    <small class="tech-info-likes">
                                        {% if postedAt != "Not posted yet..." %}
                                            Asked<br>
                                            {{ postedAt|ago }}
                                        {% endif %}
                                            {{ postedAt }}
                                    </small>
                                    <form action="{{ path('app_posts_vote', { slug: postSlug}) }}" method="POST">
                                        <div class="vote-arrows flex-fill pt-2 tech-info-likes"
                                             style="min-width: 90px;">
                                            <button class="vote-up btn btn-link"
                                                    name="direction"
                                                    value="up">
                                                <i class="far fa-arrow-alt-circle-up"></i>
                                            </button>
                                            <button class="vote-up btn btn-link"
                                                    name="direction"
                                                    value="down">
                                                <i class="far fa-arrow-alt-circle-down"></i>
                                            </button>
                                            <span>
                                            {{ postVotes }}
                                                {# <span class="js-vote-total"> #}
                                                {# #}
                                                {# </span> #}
                                        </span>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div class="col">
                                <h1 class="q-title-show">{{ postTitle }}</h1>
                                <div class="q-display p-3">
                                    <i class="fa fa-quote-left mr-3"></i>
                                    <p class="d-inline">{{ postText|markdown }}</p>
                                    <p class="pt-4"><strong>-- dr_Lao</strong>
                                        <a href="https://t.me/panda_irk">
                                            <i class="fab fa-telegram"></i>
                                        </a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-between my-4">
            <h2 class="">Comments <span style="font-size:1.2rem;">({{ postComments|length }})</span></h2>
            <button class="btn btn-sm btn-secondary">Submit a Comment</button>
        </div>


        <ul class="list-unstyled">
            {% for postComment in postComments %}
                <li class="mb-4">
                    <div class="d-flex justify-content-center">
                        <div class="mr-2 pt-2">
                            <img src="{{ asset('images/tisha.png') }}" width="50" height="50" alt="cat">
                        </div>
                        <div class="mr-3 pt-2">
                            {{ postComment|striptags|parse_markdown }}
                            <p>-- Mallory</p>
                        </div>
                        <div class="vote-arrows flex-fill pt-2 js-vote-arrows" style="min-width: 90px;">
                            <a class="vote-up" href="#" data-direction="up"><i
                                        class="far fa-arrow-alt-circle-up"></i></a>
                            <a class="vote-down" href="#" data-direction="down"><i
                                        class="far fa-arrow-alt-circle-down"></i></a>
                            <span>+ <span class="js-vote-total">6</span></span>
                        </div>
                    </div>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
